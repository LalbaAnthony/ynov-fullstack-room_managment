# ===========================================
# SERVICE USER ENVIRONMENT
# ===========================================
NODE_ENV=development
PORT=7000

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
DATABASE_URL=postgresql://service_user:UserPass123!@localhost:9000/users
POSTGRES_DB=users
POSTGRES_USER=service_user
POSTGRES_PASSWORD=UserPass123!
POSTGRES_HOST=localhost
POSTGRES_PORT=9000

# ===========================================
# JWT CONFIGURATION
# ===========================================
JWT_SECRET=your-user-service-jwt-secret-change-this
JWT_EXPIRES_IN=24h

# ===========================================
# API CONFIGURATION
# ===========================================
API_VERSION=v1
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ===========================================
# LOGGING
# ===========================================
LOG_LEVEL=info